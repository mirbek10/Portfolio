{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "composite": true,
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Добавляем поддержку Node.js */
    "types": ["node"]
  },
  "include": ["vite.config.ts"]
}
